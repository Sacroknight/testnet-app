<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Sombra -->
        <shape android:shape="rectangle">
            <solid android:color="#8076D1FF"
                tools:ignore="NewApi" /> <!-- Color sombra -->
            <corners android:radius="@dimen/activity_vertical_margin"/>
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp"> <!-- Desplazamiento para simular 3D -->
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#8000DDFF"
                android:endColor="@android:color/holo_blue_dark"
                android:angle="270"/>
            <corners android:radius="8dp"/>
            <stroke
                android:width="1dp"
                android:color="#806200EE"/> <!-- Borde -->
        </shape>
    </item>
</layer-list>